<h3>Are you sure to Delete Student ?</h3>
<div class="container">
    @{ Html.BeginForm();}
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Student Name")
        </div>
        <div class="col-lg-3">
            <b>@ViewBag.name </b>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Student Percentage")
        </div>
        <div class="col-lg-3">
            <b>@ViewBag.percentage</b>
            @Html.Hidden("Id", (int)ViewBag.id)
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
        </div>
        <div class="col-lg-3">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    </div>
    @{Html.EndForm();}
</div>