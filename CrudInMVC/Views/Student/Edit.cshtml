<<h3>Edit Student</h3>
<div class="container">
    @{ Html.BeginForm();}
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter Student Name")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("Name", (string)ViewBag.name)
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter Student percentage")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("Percentage", (decimal)ViewBag.percentage)
            @Html.Hidden("Id", (int)ViewBag.id)
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
        </div>
        <div class="col-lg-3">
            <input type="submit" value="Update" class="btn btn-warning" />
        </div>
    </div>
    @{Html.EndForm();}
</div>
